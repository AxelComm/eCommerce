{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-center">{{ produit.nom }}</h1>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center"><img src="{{ asset(produit.image) }}" class="img-responsive" style="max-width: 100%"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h4 class="box-title mt-5">Description du produit</h4>
                        <p>{{ produit.description|nl2br }}</p>
                        <h2 class="mt-5">
                            {{ produit.prix }} â‚¬ {# <small class="text-success">(36%off)</small>#}
                        </h2>
                        {#<button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                            <i class="fa fa-shopping-cart"></i>
                        </button>#}
                        <button class="btn btn-primary btn-rounded">Ajouter au panier</button>
                        {#<h3 class="box-title mt-5">Key Highlights</h3>
                        <ul class="list-unstyled">
                            <li><i class="fa fa-check text-success"></i>Sturdy structure</li>
                            <li><i class="fa fa-check text-success"></i>Designed to foster easy portability</li>
                            <li><i class="fa fa-check text-success"></i>Perfect furniture to flaunt your wonderful collectibles</li>
                        </ul>#}
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">Info generale</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-product">
                                <tbody>
                                <tr>
                                    <td width="390">Marque</td>
                                    <td>{{ produit.marque }}</td>
                                </tr>
                                <tr>
                                    <td>Materiaux</td>
