{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div style="background-color: darkgreen">
    {{ form_errors(registrationForm) }}
    </div>

    {{ form_start(registrationForm) }}
    <div style="background-color: darkgreen">
        {{ form_errors(registrationForm) }}
    </div>
    {{ form_start(registrationForm) }}
    <section class="section">
        <div class="container">
            {{ form_start(registrationForm) }}
            <div class="columns">
                <div class="column is-half">
                    <h3>Information</h3>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.pseudo, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.nom, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.prenom, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.email, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.image) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.naissance) }}
                        </div>
                    </div>
                </div>
                <div class="column is-half">
                    <h3>Adresse</h3>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.numero_adresse, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.rue_adresse, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">

                        <div class="control">
                            {{ form_row(registrationForm.ville_adresse, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">

                        <div class="control">
                            {{ form_row(registrationForm.cp_adresse, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">

                        <div class="control">
                            {{ form_row(registrationForm.pays_adresse, {'attr': {'class': 'input'}}) }}
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'checkbox'}}) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="field is-grouped is-grouped-centered">
                <button type="submit" class="button is-primary ">Valider</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </section>
    {{ form_end(registrationForm) }}
    <style>


        .section {
            background-color: #d9d5d5;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 10px;
            width: 70%;
            margin: 30px auto;
        }

        .title {
            color: #333333;
            margin-bottom: 30px;
        }


        .field:not(:last-child) {
            margin-bottom: 15px;
        }







        @media (max-width: 768px) {
            .columns {
                flex-direction: column;
            }

            .column {
                margin-bottom: 20px;
            }
        }

        h3{
            text-align: center
        }
    </style>

{% endblock %}
