{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}



{% block body %}
<div>

    <section class="py-5">
        <div id="styleinsert" class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                    <h2 class="display-5 fw-bolder compte">Vos informations : </h2>
                <p>{{ infoUser.pseudo }}</p>
                <p>{{ infoUser.email }}</p>
                <p>{{ infoUser.nom }} {{ infoUser.prenom }}</p>
                <p>Date de naissance : {{ infoUser.naissance | date('d/m/Y')  }}</p>
                <p>{{ infoUser.numeroAdresse }} {{ infoUser.rueAdresse }}</p>
                <p>{{ infoUser.cpAdresse }}, {{ infoUser.villeAdresse }}</p>
                <p>{{ infoUser.paysAdresse }}</p>
                    <div class="d-flex lesBouttons ">
                        <a href="{{ path('modifier_user') }}"><button type="submit" class="is-warning modif">Modifier</button></a>
                        <form action="{{ path('delete_user', {'id': app.user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
                            <input type="hidden" name="token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                            <button class="supprimer">
                                Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
    </section>




</div>
{% endblock %}
